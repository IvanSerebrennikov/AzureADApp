@{
    ViewBag.Title = "Azure AD App";
}

<div class="jumbotron">
    <h1>Azure AD App</h1>
    @if (Request.IsAuthenticated)
    {
        <p class="lead">Please click 'Users' button to view all company users.</p>
        <p>
            <a href="@Url.Action("Users", "Home")" class="btn btn-success btn-lg">Users</a>
        </p>
    }
    else
    {
        <p class="lead">Please Sign In.</p>
        <p>
            <a href="@Url.Action("SignIn", "Account")" class="btn btn-primary btn-lg">Sign In &raquo;</a>
        </p>
    }   
</div>