@using AzureAdApp.Models
@model List<AzureAdApp.Models.AzureMembershipModel>

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-6">
        <div style="padding: 10px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Roles</h3>
                </div>
                <div class="panel-body">
                    @foreach (var role in Model.Where(x => x.ObjectType == AzureMembershipModel.RoleType))
                    {
                        <div>
                            @role.DisplayName
                        </div>
                    }
                </div>
            </div>
        </div>               
    </div>
    <div class="col-md-6">
        <div style="padding: 10px;">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Groups</h3>
                </div>
                <div class="panel-body">
                    @foreach (var group in Model.Where(x => x.ObjectType == AzureMembershipModel.GroupType))
                    {
                        <div>
                            @group.DisplayName
                        </div>
                    }
                </div>
            </div>
        </div>       
    </div>
</div>